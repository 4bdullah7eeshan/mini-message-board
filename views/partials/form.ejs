<form method="POST" action="/new">
    <h2>New Message</h2>
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Zara">
    </div>
    <div>
        <label for="message">Message:</label>
        <input type="text" id="message" name="message" placeholder="Look...">
    </div>
    <div>
        <button type="submit">Post</button>
    </div>
    <div>
        <a href="/">Back to all messages</a>
    </div>
</form>
 